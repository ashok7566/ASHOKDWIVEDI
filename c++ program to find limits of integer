#include <iostream>
#include <climits>
using namespace std;
int main()
{
    cout << "\n\n *---- upper and lower limits of integer ----* \n";
	cout << " \n The maximum limit of int data type :     " << INT_MAX << endl;
	cout << " \nThe minimum limit of int data type :     " << INT_MIN << endl;
	cout << " \nThe maximum limit of unsigned int data type :     " << UINT_MAX << endl;
	return 0;
}
